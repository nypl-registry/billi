          <# }else{ #>
            <div class="search-result-item-level" style="padding-left:<#=levelKey*2.5#>%"><#=level#></div>
          <# } #>
        <# }); #>
      </div>
    </a>

  <# }); #>
  
  <# if (items.length==0){ #>
    <div class="search-result-item">
      No Results
    </div>
  <# } #>

</script>

</body>
